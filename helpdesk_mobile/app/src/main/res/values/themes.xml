<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Helpdesk_mobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Helpdesk_mobile.NoActionBar" parent="Theme.Helpdesk_mobile">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.SplashScreen" parent="Theme.Helpdesk_mobile.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_default</item>
        <item name="android:navigationBarColor">@color/colorAccent2</item>
    </style>
    <style name="Theme.Helpdesk_mobile.Login" parent="Theme.SplashScreen">
        <item name="android:navigationBarColor">@color/colorAccent3</item>
    </style>
    <style name="Theme.Helpdesk_mobile.Main" parent="Theme.SplashScreen">
        <item name="android:navigationBarColor">@color/colorAccent4</item>
    </style>
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
</resources>